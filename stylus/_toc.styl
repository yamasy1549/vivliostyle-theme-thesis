nav[role="doc-toc"]
  // chapterレベル
  > ol
    padding-left: 0
    list-style: none
    font-family: $font-sans-serif
    font-weight: 700

    a::before
      margin-right: 2rem

    > li
      margin-top: 2px

    // sectionレベル
    > li ol
      padding-left: 1.8rem
      list-style: none
      font-family: $font-serif
      font-weight: 500

      // subsectionレベル
      > li ol
        padding-left: 3.6rem

  // ページ番号
  a
    width: 100%
    text-decoration: none
    break-inside: avoid
    align-items: baseline

    &:before
      margin-left: 3px
      margin-right: 3px

    &:after
      float: right
      text-align: right
